module.exports = function(sequelize, DataTypes) {
  return sequelize.define('groups', {
    id: {
      type: DataTypes.INTEGER(10).UNSIGNED,
      allowNull: false,
      primaryKey: true,
      autoIncrement: true
    },
    People_id: {
      type: DataTypes.INTEGER(10).UNSIGNED,
      allowNull: true,
      primaryKey: false, 
      autoIncrement: true
    },
    papers_id: {
      type: DataTypes.INTEGER(10).UNSIGNED,
      allowNull: true,
      primaryKey: false, 
      autoIncrement: true
    },
    citations_id: {
      type: DataTypes.INTEGER(10).UNSIGNED,
      allowNull: true, 
      primaryKey: false,
      autoIncrement: true
    },
    Street: {
      type: DataTypes.STRING(120),
      allowNull: true
    },
    city: {
      type: DataTypes.STRING(100),
      allowNull: true
    },
    state: {
      type: DataTypes.STRING(100),
      allowNull: true
    },
    country: {
      type: DataTypes.STRING(50),
      allowNull: true
    },
    zip_code: {
      type: DataTypes.INTEGER(10).UNSIGNED,
      allowNull: true
    },
    description: {
      type: DataTypes.BLOB('medium'),
      allowNull: true
    },
    founded: {
      type: DataTypes.DATE,
      allowNull: true
    },
    url: {
      type: DataTypes.BLOB('tiny'),
      allowNull: true
    },
    Git_org: {
    type: DataTypes.BLOB('medium'),
    allowNull: true
    }, 
    email_id: {
    type: DataTypes.INTEGER(10).UNSIGNED,
    allowNull: true,
    primaryKey: false, 
    autoIncrement: true
    },
    phone_id: {
    type: DataTypes.INTEGER(10).UNSIGNED,
    allowNull: true,
    primaryKey: false, 
    autoIncrement: true
    },
    spoc_firstname: {
    type: DataTypes.STRING(100),
    allowNull: true
    }, 
    spoc_lastname: {
    type: DataTypes.STRING(100),
    allowNull: true
    },
    spoc_phonenumber: {
    type: DataTypes.INTEGER(50).UNSIGNED,
    allowNull: true
    },
    spoc_emailaddress: {
    type: DataTypes.STRING(255),
    allowNull: false,
    unique: true
    }
  }, {
    tableName: 'groups'
  });
};
